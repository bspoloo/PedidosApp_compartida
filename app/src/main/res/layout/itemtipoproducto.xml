<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="4dp"
    app:cardCornerRadius="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/fondo_item_producto">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/fotoProducto"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre del Producto:"
                android:textStyle="bold"
                android:textColor="#05aca3"
                android:textSize="15dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre del Producto"
                android:id="@+id/nombreProducto"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="DescripciÃ³n del Producto:"
                android:textStyle="bold"
                android:textColor="#05aca3"
                android:textSize="15dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Descripcion del Producto"
                android:id="@+id/descripcionProducto"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tipo del Producto:"
                android:textStyle="bold"
                android:textColor="#05aca3"
                android:textSize="15dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tipo del Producto"
                android:id="@+id/tipoProducto"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Marca del Producto:"
                android:textStyle="bold"
                android:textColor="#05aca3"
                android:textSize="15dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Marca del Producto"
                android:id="@+id/marcaProducto"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Unidad del Producto:"
                android:textStyle="bold"
                android:textColor="#05aca3"
                android:textSize="15dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Unidad del Producto"
                android:id="@+id/unidadProducto"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Precio del Producto en BS:"
                android:textStyle="bold"
                android:textColor="#05aca3"
                android:textSize="15dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Precio del Producto"
                android:id="@+id/precioProducto"/>
            <Button

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Hacer pedido"
                android:textColor="@color/white"
                android:id="@+id/botonPedido"
                android:background="@drawable/bnt_sesion_google"/>

        </LinearLayout>
    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewHacerPedido"
        android:layout_width="400dp"
        android:layout_height="720dp"
        android:background="@drawable/bnt_sesion_sin_google"
        android:visibility="gone"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/buttonCerrarP"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/button_cerrar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.875"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.005" />

            <TextView
                android:layout_width="368dp"
                android:layout_height="40dp"
                android:background="@drawable/fondo_item_producto2"
                android:text="Hacer pedido del producto"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="22dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.066" />

            <EditText
                android:id="@+id/DatoNombrePedido"
                android:layout_width="340dp"
                android:layout_height="40dp"
                android:background="@drawable/fondo_edittex1"
                android:drawablePadding="-30dp"
                android:hint="Nombre del producto"
                android:paddingLeft="25dp"
                android:textColor="@color/black"
                android:textColorHint="#05aca3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.258"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.145"
                android:enabled="false"/>

            <EditText
                android:id="@+id/DatoDescripcionPedido"
                android:layout_width="340dp"
                android:layout_height="40dp"
                android:background="@drawable/fondo_edittex1"
                android:drawablePadding="-30dp"
                android:hint="Descripcion del producto"
                android:paddingLeft="25dp"
                android:textColor="@color/black"
                android:textColorHint="#05aca3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.241"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.217"
                android:enabled="false"/>

            <EditText
                android:id="@+id/DatoMarcaPedido"
                android:layout_width="340dp"
                android:layout_height="40dp"
                android:background="@drawable/fondo_edittex1"
                android:drawablePadding="-30dp"
                android:hint="Marca del producto"
                android:paddingLeft="25dp"
                android:textColor="@color/black"
                android:textColorHint="#05aca3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.258"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.363"
                android:enabled="false"/>

            <EditText
                android:id="@+id/DatoUnidadPedido"
                android:layout_width="340dp"
                android:layout_height="40dp"
                android:background="@drawable/fondo_edittex1"
                android:drawablePadding="-30dp"
                android:hint="Unidad del producto"
                android:paddingLeft="25dp"
                android:textColor="@color/black"
                android:textColorHint="#05aca3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.241"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.442"
                android:enabled="false"/>

            <EditText
                android:id="@+id/DatoPrecioPedido"
                android:layout_width="340dp"
                android:layout_height="40dp"
                android:background="@drawable/fondo_edittex1"
                android:drawablePadding="-30dp"
                android:hint="Precio del producto"
                android:inputType="numberDecimal"
                android:paddingLeft="25dp"
                android:textColor="@color/black"
                android:textColorHint="#05aca3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.241"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.516"
                android:enabled="false"/>

            <EditText
                android:id="@+id/DatoUbicacionPedido"
                android:layout_width="340dp"
                android:layout_height="40dp"
                android:background="@drawable/fondo_edittex1"
                android:drawablePadding="-30dp"
                android:hint="Ubicacion de la entrega"
                android:paddingLeft="25dp"
                android:textColor="@color/black"
                android:textColorHint="#05aca3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.241"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.588" />

            <EditText
                android:id="@+id/DatoDestinatarioPedido"
                android:layout_width="340dp"
                android:layout_height="40dp"
                android:background="@drawable/fondo_edittex1"
                android:drawablePadding="-30dp"
                android:hint="Nombre Completo del Destinatario"
                android:paddingLeft="25dp"
                android:textColor="@color/black"
                android:textColorHint="#05aca3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.241"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.663" />

            <EditText
                android:id="@+id/DatoCantidadPedido"
                android:layout_width="340dp"
                android:layout_height="40dp"
                android:background="@drawable/fondo_edittex1"
                android:drawablePadding="-30dp"
                android:hint="Cantidad a ordenar"
                android:inputType="number"
                android:paddingLeft="25dp"
                android:textColor="@color/black"
                android:textColorHint="#05aca3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.258"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.735" />

            <EditText
                android:id="@+id/DatoTipoPedido"
                android:layout_width="340dp"
                android:layout_height="40dp"
                android:background="@drawable/fondo_edittex1"
                android:drawablePadding="-30dp"
                android:hint="Tipo del producto"
                android:paddingLeft="25dp"
                android:textColor="@color/black"
                android:textColorHint="#05aca3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.241"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.292"
                android:enabled="false"/>

            <EditText
                android:id="@+id/EditCotizar"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="@drawable/fondo_item_producto"
                android:textAlignment="center"
                android:textColor="#05aca3"
                android:enabled="false"
                android:textSize="22dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.144"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.844" />

            <Button
                android:id="@+id/buttonCotizar"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bnt_sesion_google"
                android:text="Cotizar"
                android:textColor="#ffff"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.784"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.845" />


            <Button
                android:id="@+id/buttonPagar"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/fondo_item_producto"
                android:text="Pagar"
                android:textColor="#05aca3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.456"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.943" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewEscogerPedido"
        android:layout_width="400dp"
        android:layout_height="150dp"
        android:background="@drawable/bnt_sesion_sin_google"
        android:visibility="gone"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/buttonCerrarEP"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/button_cerrar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.905"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:layout_width="368dp"
                android:layout_height="40dp"
                android:background="@drawable/fondo_item_producto2"
                android:text="Escoge el tipo de pedido"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="22dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.125"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.281" />

            <Button
                android:id="@+id/buttonRecoger"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/fondo_item_producto"
                android:text="Recoger"
                android:textColor="#05aca3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.804"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.843" />

            <Button
                android:id="@+id/buttonDelibery"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/fondo_item_producto"
                android:text="Delivery"
                android:textColor="#05aca3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.108"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.843" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.cardview.widget.CardView>